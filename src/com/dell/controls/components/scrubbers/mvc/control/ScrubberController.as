package com.dell.controls.components.scrubbers.mvc.control {import com.dell.events.UIEvent;import flash.geom.Rectangle;public class ScrubberController implements IScrubberController {    private const NUMBER_OF_FRAMES:Number = 180;    private var range:Number;    private var model:Object;    public function ScrubberController(oModel:Object) {        this.model = oModel;    }    /**     * <p>Calculates the frame which the scrubber has scrubbed to.</p>     * <p>value / this.range  = the percent complete of the scrubber position between the values 0 and 1.</p>     * <p>this.NUMBER_OF_FRAMES = the number of frames in the movie clip or swf to be scrubbed.     * <p>Math.ceil (if used) = gets a whole number of the frame position between 0 and the this.NUMBER_OF_FRAMES.</p>     * <p>Math.floor (if used) = gets a whole number of the frame position between 1 and the this.NUMBER_OF_FRAMES.</p>     *     * @param value     *     */    public function updateHandler( value:Number ):void {        value = Math.ceil( ( value / this.range) * this.NUMBER_OF_FRAMES);        this.model.eventUpdateObjectFromController = value;    }    public function completeHandler( value:Number ):void {        value = Math.ceil( ( value / this.range) * this.NUMBER_OF_FRAMES);        this.model.eventCompleteObjectFromController = value;    }    public function rangeHandler(rangeObject:Rectangle):void {        this.range = rangeObject.width;    }}}